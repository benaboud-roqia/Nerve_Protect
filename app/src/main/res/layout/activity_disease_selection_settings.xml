<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_disease_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_dark"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_disease_message"
        android:textSize="16sp"
        android:textColor="@color/text_color_grey"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/radio_group_diseases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/radio_diabetic_neuropathy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diabetic_neuropathy"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_als"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/als"
            android:textSize="18sp"
            android:padding="12dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save" />

    </LinearLayout>

</LinearLayout>
