<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_us_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/about_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dianerve Protect is an innovative connected health solution developed by a multidisciplinary team of engineers in mechanical, control, and computer engineering, specialized in the design of intelligent medical devices aimed at preventing diabetes-related complications, particularly diabetic neuropathy."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This project is part of an integrated technological and medical approach, combining innovation, scientific rigor, and a strong commitment to improving public health."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Team"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The development of the application and the smart wearable device was carried out by a dedicated and complementary team:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Ms. Roqia BENABOUD"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Ms. Sirine Zouaoui"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Mr. Ibrahim Rassim Chebout"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Mr. Lokmane Abderrahmane Lameri"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objective"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To provide a reliable and intelligent tool for the early detection of diabetic neuropathy, enabling personalized patient monitoring through real-time analysis of biomedical data, with the goal of reducing the risk of chronic complications."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technological Components"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The system is based on an integrated hardware and software architecture, combining biomedical sensors, embedded signal processing, artificial intelligence, wireless connectivity, and a user-friendly mobile interface."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partnerships and Supervision"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This project was developed with the support of:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• The University of Oum El Bouaghi Incubator"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• The National Agency for the Promotion and Development of Technology Parks (ANPT)"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Under the scientific supervision of:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Mr. Zakaria Tolba"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Ms. Nour El Houda Dehimi"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

